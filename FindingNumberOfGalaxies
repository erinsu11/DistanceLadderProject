import pandas as pd
import numpy as np
from sklearn.cluster import KMeans
import matplotlib.pyplot as plt

# Reading in CSV
ddir = '/Users/erinsullivan/Desktop/universe_6/'
data = pd.read_csv(ddir + "star_data.csv")

# Extracting columns for equatorial and polar coordinates
equatorial = data['Equat']
polar = data['Polar']

# Converting coordinates to radians
equatorial_rad = np.radians(equatorial)
polar_rad = np.radians(polar)

# Calculating x, y, and z coordinates
x = np.cos(polar_rad) * np.cos(equatorial_rad)
y = np.cos(polar_rad) * np.sin(equatorial_rad)
z = np.sin(polar_rad)

# Calculating distances between each galaxy
distance = np.sqrt(x**2 + y**2 + z**2)

# Choosing a threshold distance for defining a galaxy
threshold_distance = 1.0

# Counting the number of galaxies
num_galaxy = np.sum(distance <= threshold_distance)

# Printing the number of galaxies
print("Number of galaxies: ", num_galaxy)
